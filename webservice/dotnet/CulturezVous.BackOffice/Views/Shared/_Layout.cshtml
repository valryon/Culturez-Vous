<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head id="Head1" runat="server">
    <title>Culturez-Vous - @ViewBag.Title</title>
    <link href=@Url.Content("~/Content/css/bootstrap.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/Content/css/bootstrap-responsive.css") rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="@Url.Content("~/Content/js/jquery-1.7.1.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/js/jquery-ui-1.8.18.custom.min.js")"></script>
    <link type="text/css" href="@Url.Content("~/Content//css/jquery-ui-1.8.18.custom.css")" rel="stylesheet" />
</head>
<body>
    <div class="navbar">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="brand" href="@Url.Action("Index", "Home")">Culturez-Vous</a>

                <div class="nav-collapse">
                    <ul class="nav">
                        <li><a href="@Url.Action("Index", "Admin", new { area = "Admin" })">Admin</a> </li>
                    </ul>

                    @if (Request.IsAuthenticated)
                    {
                        <ul class="nav nav-pills">
                            <li>
                                @Html.ActionLink(User.Identity.Name, "LogOff", "Account")
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row-fluid">
            @if (IsSectionDefined("Title"))
            {
                <div class="span12 well">
                    <div>
                        @RenderSection("Title")
                    </div>
                </div>
            }
        </div>
        <div class="row-fluid">
            @if (IsSectionDefined("Nav"))
            {
                <div class="span3 well">
                    <div>
                        @RenderSection("Nav")
                    </div>
                </div>
            }
            <div class="span9">
                <div>
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <div class="footer span12">
        <hr />
        <p>
            Copyright Damien Mayance et Matthieu Oger
        </p>
    </div>
</body>
</html>
