@model CulturezVous.Service.Areas.Admin.Models.PaginationModel
<div class="pagination pagination-small">
    <ul>
        @if (Model.CurrentPage > 1)
        {
            <li class="previous"><a href="@Url.Action(Model.Action, Model.Controller, new { page = Model.CurrentPage - 1 }) ">
                &larr; </a></li>
        }
        @for (int i = 1; i <= Model.TotalPage; i++)
        {
            bool active = (i == Model.CurrentPage);

            <li class="@(active ? "active" : "")"><a href="@Url.Action(Model.Action, Model.Controller, new { page = i })">@i</a></li>
        }
        @if (Model.CurrentPage < Model.TotalPage)
        {
            <li class="next"><a href="@Url.Action(Model.Action, Model.Controller, new { page = Model.CurrentPage + 1 }) ">
                &rarr; </a></li>
        }
    </ul>
</div>
